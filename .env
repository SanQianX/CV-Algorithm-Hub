# ============================================
# CV Algorithm Hub - Environment Variables
# ============================================
# Copy this file to .env and modify values
# ============================================

# ============================================
# Environment Selection
# ============================================
# Options: development, staging, production
CVHUB_ENVIRONMENT=development

# ============================================
# Application Settings
# ============================================
CVHUB_APP_NAME=CV Algorithm Hub
CVHUB_APP_VERSION=1.0.0

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
CVHUB_DATABASE_HOST=postgres
CVHUB_DATABASE_PORT=5432
CVHUB_DATABASE_USERNAME=postgres
CVHUB_DATABASE_PASSWORD=postgres
CVHUB_DATABASE_NAME=cv_algorithm_hub

# ============================================
# Redis Configuration
# ============================================
CVHUB_REDIS_HOST=redis
CVHUB_REDIS_PORT=6379
CVHUB_REDIS_DB=0
CVHUB_REDIS_PASSWORD=

# ============================================
# RabbitMQ Configuration
# ============================================
CVHUB_RABBITMQ_HOST=rabbitmq
CVHUB_RABBITMQ_PORT=5672
CVHUB_RABBITMQ_USERNAME=guest
CVHUB_RABBITMQ_PASSWORD=guest
CVHUB_RABBITMQ_VIRTUAL_HOST=/

# ============================================
# GPU Configuration
# ============================================
CVHUB_GPU_ENABLED=false
CVHUB_GPU_DEVICE_ID=0
GPU_COUNT=1
NVIDIA_VISIBLE_DEVICES=all
CVHUB_CUDA_VERSION=11.8

# ============================================
# Security Configuration
# ============================================
CVHUB_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
CVHUB_JWT_ALGORITHM=HS256
CVHUB_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CVHUB_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================
# Paths Configuration
# ============================================
CVHUB_DATA_DIR=/app/data
CVHUB_MODELS_DIR=/app/models
CVHUB_TEMP_DIR=/app/temp

# ============================================
# Monitoring & Logging
# ============================================
CVHUB_MONITORING_USERNAME=admin
CVHUB_MONITORING_PASSWORD=admin123
GRAFANA_PASSWORD=admin123

# Alerting
CVHUB_ALERT_WEBHOOK_URL=
PROMETHEUS_ALERTMANAGER_URL=

# ============================================
# Feature Flags
# ============================================
# Enable test data (development only)
CVHUB_ENABLE_TEST_DATA=true

# ============================================
# Docker Hub Registry (CI/CD)
# ============================================
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=

# ============================================
# Staging Server (CD)
# ============================================
STAGING_HOST=
STAGING_USER=
STAGING_SSH_KEY=

# ============================================
# Production Server (CD)
# ============================================
PRODUCTION_HOST=
PRODUCTION_USER=
PRODUCTION_SSH_KEY=

# ============================================
# Blue-Green Deployment
# ============================================
# Current deployment color: blue or green
CVHUB_DEPLOYMENT_COLOR=blue
CVHUB_SWAP_TIMEOUT=60
